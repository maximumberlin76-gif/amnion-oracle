{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/amnion-oracle/schemas/system.schema.json",
  "title": "AMNION-ORACLE System Schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "system": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string", "default": "AMNION-ORACLE" },
        "version": { "type": "string", "default": "0.1.0" },
        "tick_hz": { "type": "number", "minimum": 0.001, "default": 10.0 },
        "runtime_mode": {
          "type": "string",
          "enum": ["sim", "dry", "live"],
          "default": "sim"
        },
        "seed": { "type": "integer", "default": 0 },
        "strict": { "type": "boolean", "default": true },
        "paths": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "configs_dir": { "type": "string", "default": "configs" },
            "schemas_dir": { "type": "string", "default": "schemas" },
            "logs_dir": { "type": "string", "default": "logs" }
          },
          "required": ["configs_dir", "schemas_dir", "logs_dir"]
        }
      },
      "required": ["name", "version", "tick_hz", "runtime_mode", "strict", "paths"]
    }
  },
  "required": ["system"]
}
