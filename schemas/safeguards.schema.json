{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://maximumberlin76.invalid/schemas/safeguards.schema.json",
  "title": "Safeguards Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "safeguards"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$"
    },

    "safeguards": {
      "type": "object",
      "additionalProperties": false,
      "required": ["goal", "guard_states"],
      "properties": {
        "goal": { "type": "string", "minLength": 3 },

        "watchdog": {
          "type": "object",
          "additionalProperties": false,
          "required": ["enabled"],
          "properties": {
            "enabled": { "type": "boolean" },
            "heartbeat_sec": { "type": "number", "minimum": 0.1, "maximum": 1200 },
            "max_silence_sec": { "type": "number", "minimum": 0.1, "maximum": 86400 }
          }
        },

        "limits": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "P_max": { "type": "number", "minimum": 0 },
            "P_budget": { "type": "number", "minimum": 0 },
            "Q_min": { "type": "number", "minimum": 0, "maximum": 1 },
            "Q_max": { "type": "number", "minimum": 0, "maximum": 1 },

            "phase_deg_min": { "type": "number", "minimum": -180, "maximum": 180 },
            "phase_deg_max": { "type": "number", "minimum": -180, "maximum": 180 }
          }
        },

        "actions": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "decouple": { "type": "boolean" },
            "damp": { "type": "boolean" },
            "cap": { "type": "boolean" },
            "sandbox": { "type": "boolean" }
          }
        },

        "guard_states": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "description"],
            "properties": {
              "name": {
                "type": "string",
                "enum": ["OK", "WARN", "DEGRADED", "SANDBOX", "SAFE_HOLD", "SHUTDOWN"]
              },
              "description": { "type": "string", "minLength": 3 },

              "trigger": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "Q_below": { "type": "number", "minimum": 0, "maximum": 1 },
                  "mismatch_power_above": { "type": "number", "minimum": 0 },
                  "mismatch_phase_deg_above": { "type": "number", "minimum": 0, "maximum": 180 },
                  "temp_c_above": { "type": "number" }
                }
              },

              "response": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "set_coupling_to": { "type": "number", "minimum": 0, "maximum": 1 },
                  "set_damping_to": { "type": "number", "minimum": 0, "maximum": 10 },
                  "set_P_budget_to": { "type": "number", "minimum": 0 },
                  "freeze_output": { "type": "boolean" }
                }
              }
            }
          }
        }
      }
    }
  }
}
