{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/amnion-oracle/schemas/metrics.schema.json",
  "title": "AMNION-ORACLE Metrics Schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "max_history": { "type": "integer", "minimum": 1, "default": 512 },
        "emit_every": { "type": "integer", "minimum": 1, "default": 1 },

        "fields": {
          "type": "array",
          "items": { "type": "string" },
          "default": [
            "ts",
            "tick",
            "coherence",
            "stability",
            "risk",
            "violations",
            "output_power",
            "phase"
          ]
        },

        "limits": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "coherence_min": { "type": "number", "minimum": 0.0, "maximum": 1.0, "default": 0.73 },
            "risk_max": { "type": "number", "minimum": 0.0, "default": 1.0 },
            "violations_max": { "type": "integer", "minimum": 0, "default": 0 }
          },
          "required": ["coherence_min", "risk_max", "violations_max"]
        }
      },
      "required": ["enabled", "max_history", "emit_every", "fields", "limits"]
    }
  },
  "required": ["metrics"]
}
